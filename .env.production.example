# Production Environment Variables Template
# Copy these to your deployment platform's environment settings

# === REQUIRED SUPABASE CONFIGURATION ===
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
# Private key for server-side operations (DO NOT expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# === APPLICATION SETTINGS ===
VITE_APP_ENV=production
VITE_APP_NAME=AniThing - Ultimate Anime & Manga Tracker
VITE_APP_VERSION=2.0.0
VITE_APP_URL=https://your-domain.com

# === FEATURE FLAGS (Production) ===
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_PUSH=true

# === API CONFIGURATION ===
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000
VITE_MAX_CONCURRENT_REQUESTS=10
VITE_RATE_LIMIT_PER_MINUTE=100

# === CDN AND ASSETS ===
VITE_CDN_URL=https://cdn.your-domain.com
VITE_ASSETS_BASE_URL=https://assets.your-domain.com
VITE_IMAGE_CDN=https://img.your-domain.com

# === ANALYTICS AND MONITORING ===
VITE_ANALYTICS_ID=your_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn
VITE_PERFORMANCE_MONITORING=true

# === SECURITY SETTINGS ===
VITE_CSRF_TOKEN=your_csrf_token
VITE_API_KEY_HEADER=X-API-Key
VITE_SECURE_COOKIES=true
VITE_SAME_SITE=strict

# === SOCIAL AUTHENTICATION ===
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_DISCORD_CLIENT_ID=your_discord_client_id
VITE_GITHUB_CLIENT_ID=your_github_client_id

# === EXTERNAL SERVICES ===
VITE_ANILIST_API_URL=https://graphql.anilist.co
VITE_MAL_API_URL=https://api.myanimelist.net/v2
VITE_TMDB_API_KEY=your_tmdb_api_key

# === CACHING CONFIGURATION ===
VITE_CACHE_TTL=3600
VITE_STATIC_CACHE_TTL=31536000
VITE_API_CACHE_TTL=1800

# === PWA SETTINGS ===
VITE_PWA_ENABLED=true
VITE_SW_CACHE_STRATEGY=NetworkFirst
VITE_OFFLINE_FALLBACK=true

# === DATABASE OPTIMIZATION ===
VITE_DB_POOL_SIZE=20
VITE_DB_TIMEOUT=30000
VITE_DB_MAX_CONNECTIONS=100

# === BUILD OPTIMIZATION ===
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_MINIFY=true
VITE_TREESHAKE=true
VITE_SOURCEMAP=false

# === DEPLOYMENT SETTINGS ===
# Set to your actual domain in production
VITE_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
VITE_CORS_ENABLED=true
VITE_HELMET_ENABLED=true

# === ERROR HANDLING ===
VITE_ERROR_REPORTING=true
VITE_LOG_LEVEL=error
VITE_CRASH_REPORTING=true