{
  "enabled": true,
  "mode": "watch",
  "syncInterval": 300000,
  "debounceDelay": 10000,
  "branch": "main",
  "commitPrefix": "Auto-sync:",
  "ignorePaths": [
    ".git",
    "node_modules",
    "dist",
    ".DS_Store",
    "*.log",
    "package-lock.json",
    ".env.local",
    "*.tmp",
    "*.swp"
  ],
  "maxRetries": 3,
  "retryDelay": 5000,
  "autoCommitMessage": true,
  "pushOnSave": false,
  "pullBeforePush": true,
  "notifications": {
    "onSuccess": true,
    "onError": true,
    "onConflict": true
  }
}